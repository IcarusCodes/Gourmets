<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome Boss!{% endblock %}</title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
            <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
            <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div class='dashboard'>
                <!-- Hamburger Menu -->
                <div class='dashboard-app'>
                    <header class='dashboard-toolbar'>
                        <span onclick="toggleHamburger(this)" class="menu-toggle material-symbols-outlined">
                            arrow_back_ios
                        </span>
                        <a href="{{ path('home_page') }}" class="foodi" style="text-decoration: none">
                            Foodi Command Center
                        </a>
                    </header>

                    <div class='dashboard-content'>
                        {% block content %}{% endblock %}
                    </div>
                </div>

                <div class="dashboard-nav">
                    <header>
                        <a href="{{ path('home_page') }}" class="brand-logo">
                            <i class="fa-solid fa-kitchen-set"></i>
                            <span>Gourmets</span>
                        </a>
                    </header>
                    <nav class="dashboard-nav-list">
                        <!-- Home -->
                        <a href="{{ path('home_page') }}" class="dashboard-nav-item">
                            <i class="fas fa-home"></i>Home
                        </a>
                        <!-- Dashboard -->
                        <a href="{{ path('dashboard') }}" class="dashboard-nav-item">
                            <i class="fas fa-tachometer-alt"></i>Dashboard
                        </a>
                        <!-- Logout -->
                        <div class="nav-item-divider"></div>
                        <a href="#" class="dashboard-nav-item">
                            <i class="fas fa-sign-out-alt"></i>Logout
                        </a>
                    </nav>
                </div>
            </div>
        {% endblock %}
    <footer class="footer">
        <div class="container text-center">
            <span class="pink-highlight" style="display: inline-block">Made with
{#                <i class="fa fa-heart"></i>#}
                <object data="{{ asset('images/svg/sevege.svg') }}"></object>
                by Satori.</span>
        </div>

    </footer>
    {% block js %}
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/46e6a31948.js" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        <script src="{{ asset('js/homepage.js') }}"></script>
    {% endblock %}
    </body>


</html>
